@model AuthorListVm
<form method="post">
    @Html.AntiForgeryToken();
    <input type="hidden" asp-for="AuthorId" />
    <div class="border p-3 m-4 w-75 mx-auto">
        <div class="row pb-2">
            <h2 class="text-primary">Remove An Author</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="FullName"></label>
            <input class="form-control" asp-for="FullName" disabled />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="CountryName"></label>
            <input class="form-control" asp-for="CountryName" disabled />
        </div>

        <button class="btn btn-danger" type="submit">
            <i class="bi bi-floppy2-fill"></i>
            Remove
        </button>
        <a class="btn btn-success" asp-controller="Authors" asp-action="Index">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{

        <partial name="_ValidationScriptsPartial" />
    }
}