@model CategoryEditVm
<form method="post">
    @Html.AntiForgeryToken();
    <input type="hidden" asp-for="CategoryId" />
    <div class="border p-3 m-4 w-75 mx-auto">
        <div class="row pb-2">
            <h2 class="text-primary">Remove Category</h2>
            <h5 class="text-secondary">Confirm action by pressing the button below</h5>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="CategoryName"></label>
            <input class="form-control" asp-for="CategoryName" readonly />
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0" asp-for="Description"></label>
            <div  class="form-control" style="width: 100%; height: auto; padding: 10px; border: 1px solid #ced4da; border-radius: .25rem; overflow-y: auto;">
                @Html.Raw(Model.Description)
            </div>
        </div>

        <div class="form-group form-check">
            <input class="form-check-input" asp-for="IsActive" type="checkbox" readonly />
            <label class="form-check-label" asp-for="IsActive"></label>

        </div>

        <button class="btn btn-danger" type="submit">
            <i class="bi bi-floppy2-fill"></i>
            Remove
        </button>
        <a class="btn btn-success" asp-controller="Categories" asp-action="Index">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}